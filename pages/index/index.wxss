/*区域下拉列表  */

page {
    background: #eee;
}

.wrp {
    padding: 0 40rpx;
}

/*搜索  */

.search-wrp {
    background: #efeff4;
    padding: 15rpx 40rpx;
    position: relative;
}

.weui-search-bar {
    padding: 5px 0;
    border: none;
}

.search-wrp .tab{
    border-right: 1px solid rgba(50, 50, 50, 0.2);
}
.search-wrp .row {
    width: 100%;
    padding: 5px;
}
.row text{
    color:  rgba(50, 50, 50, 0.4)
}

.search-wrp .city {
    text-align: center;
    flex: 1;
    margin-left: -3px;
}

.search-wrp .region {
    flex: 1;
    text-align: center;
}

.search-wrp .getLocation {
    flex: 1;
    text-align: center;
}

.search-wrp .getLocation text {
    padding-right: 5px;
}

.form-wrp input {
    border-radius: 10rpx;
    background: #fff;
    margin-left: 20rpx;
    margin-right: 20rpx;
    padding: 0 10rpx;
    height: 30px;
    flex: 1 0 auto;
}

.form-wrp icon {
    flex: 0 0 auto;
}

/* 筛选栏start */

.dropdown-wrp {
    background: #fff;
    position: relative;
    max-height: 300px;
    overflow: scroll;
}

/* .dropdown-tab {
    flex: 1;
    justify-content: center;
    padding: 0 18px;
    position: relative;
} */

.dropdown-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 5px;
}
.no-data{
    width: 100%;
    text-align: center;
    padding: 10px 0;
    background: #eeeeee;
    padding-top: 110px;
    color:rgba(0, 0, 0, .4);
}
.itemList-wrp {
    width: 100%;
    background: #fff;
    padding: 0 18px;
    box-shadow: -5px 0 20px transparent,
                /*左边阴影*/ 5px 0 20px transparent,
                /*右边阴影*/ 0 -5px 20px transparent,
                /*顶部阴影*/ 0 5px 20px #eee; /*底边阴影*/
}

.itemList-wrp .item {
    padding: 7px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid #eee;
}

.itemList-wrp .item:nth-child(1) {
    border: none;
}

.itemList-wrp .item.active {
    color: green;
}

/* 筛选栏end*/

/*门店列表 start */

.store-item-wrp {
    padding: 30rpx;
    border-bottom: 1px solid #eee;
    background: #fff;
}

.store-item-wrp:last-child {
    border: none;
}

.store-item-wrp image {
    width: 50px;
    height: 50px;
    margin-right: 15px;
}

.store-item-wrp>view {
    width: calc(100% - 65px);
}

.store-item-wrp.branch-name {
    font-size: 18px;
}

.store-item-wrp .location {
    color: #333;
    font-size: 14px;
}

.tag {
    display: inline-block;
    margin-right: 5px;
    border-radius: 3px;
    border: 1px solid orange;
}

.tag-wrp .tag:nth-child(4n+1), .tag-wrp .tag:nth-child(4n+2) {
    color: orange;
}

/*门店列表 end */

/*  加载更多   */

.weui-loading {
    margin: 0 5px;
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    -webkit-animation: weuiLoading 1s steps(12, end) infinite;
    animation: weuiLoading 1s steps(12, end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

.weui-loadmore {
    width: 65%;
    margin: 1.5em auto;
    line-height: 1.6em;
    font-size: 14px;
    text-align: center;
}

.weui-loadmore__tips {
    display: inline-block;
    vertical-align: middle;
}

.loadmore-end {
    width: 100%;
    margin: 1.2em auto;
    line-height: 1.6em;
    font-size: 14px;
    text-align: center;
}

.mask {
    width: 100%;
    height: 100%;
    background: rgba(1, 1, 1, 0.4);
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
}

.levelUp {
    z-index: 3;
}

.forbidScroll {
    overflow: hidden;
}
