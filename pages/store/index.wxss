.wrp {
    padding: 0 40rpx;
}

.header {
    background: #f8f8f8;
    padding: 30rpx;
}

.header image {
    width: 50px;
    height: 50px;
    margin-right: 15px;
}

.header text {
    width: calc(100% - 58px);
}

.item {
    line-height: 1.6;
    padding: 10px 20rpx;
    border-bottom: 1px solid #eee;
   
}

.item text {
    padding-right: 5px;
}
.item .location{
 overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item:last-of-type {
    border: none;
}
